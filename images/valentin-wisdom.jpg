<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="wisdomBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea"/>
      <stop offset="100%" style="stop-color:#764ba2"/>
    </linearGradient>
    <radialGradient id="lightGrad" cx="50%" cy="30%" r="70%">
      <stop offset="0%" style="stop-color:#f39c12;stop-opacity:0.8"/>
      <stop offset="100%" style="stop-color:#f39c12;stop-opacity:0.1"/>
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#wisdomBg)"/>
  <rect width="400" height="300" fill="url(#lightGrad)"/>
  
  <!-- Books on shelf -->
  <g transform="translate(50,200)">
    <rect x="0" y="0" width="15" height="60" fill="#e74c3c"/>
    <rect x="20" y="0" width="18" height="60" fill="#2c3e50"/>
    <rect x="43" y="0" width="12" height="60" fill="#f39c12"/>
    <rect x="60" y="0" width="20" height="60" fill="#27ae60"/>
    <rect x="85" y="0" width="16" height="60" fill="#8e44ad"/>
    <rect x="106" y="0" width="14" height="60" fill="#e67e22"/>
    
    <!-- Shelf -->
    <rect x="-10" y="60" width="140" height="8" fill="#8b4513"/>
  </g>
  
  <!-- Open book in center -->
  <g transform="translate(200,180)">
    <!-- Book pages -->
    <path d="M-60,0 Q-60,-20 -30,-25 L30,-25 Q60,-20 60,0 L60,40 Q30,45 0,40 Q-30,45 -60,40 Z" 
          fill="white" stroke="#bdc3c7" stroke-width="2"/>
    <!-- Book binding -->
    <rect x="-2" y="-25" width="4" height="70" fill="#2c3e50"/>
    
    <!-- Text lines -->
    <g stroke="#2c3e50" stroke-width="1" opacity="0.6">
      <line x1="-45" y1="-15" x2="-10" y2="-15"/>
      <line x1="-45" y1="-5" x2="-15" y2="-5"/>
      <line x1="-45" y1="5" x2="-5" y2="5"/>
      <line x1="-45" y1="15" x2="-20" y2="15"/>
      
      <line x1="10" y1="-15" x2="45" y2="-15"/>
      <line x1="15" y1="-5" x2="45" y2="-5"/>
      <line x1="5" y1="5" x2="45" y2="5"/>
      <line x1="20" y1="15" x2="45" y2="15"/>
    </g>
  </g>
  
  <!-- Floating wisdom symbols -->
  <g fill="rgba(255,255,255,0.7)">
    <!-- Light bulb -->
    <g transform="translate(100,80)">
      <circle cx="0" cy="0" r="12" fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M-6,8 L6,8 M-4,12 L4,12 M-2,16 L2,16" stroke="currentColor" stroke-width="2"/>
      <path d="M-3,-8 Q0,-12 3,-8" stroke="currentColor" stroke-width="2" fill="none"/>
    </g>
    
    <!-- Graduation cap -->
    <g transform="translate(320,100)">
      <rect x="-15" y="-3" width="30" height="6" fill="currentColor"/>
      <path d="M-15,3 L0,8 L15,3" fill="currentColor"/>
      <circle cx="12" cy="0" r="2" fill="currentColor"/>
      <path d="M12,-2 Q18,-8 20,-12" stroke="currentColor" stroke-width="1" fill="none"/>
    </g>
    
    <!-- Scroll -->
    <g transform="translate(300,200)">
      <rect x="-20" y="-8" width="40" height="16" rx="8" fill="currentColor"/>
      <circle cx="-20" cy="0" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
      <circle cx="20" cy="0" r="8" fill="none" stroke="currentColor" stroke-width="2"/>
    </g>
  </g>
  
  <!-- Glowing orbs of wisdom -->
  <circle cx="80" cy="50" r="3" fill="#f39c12" opacity="0.8"/>
  <circle cx="150" cy="40" r="2" fill="#f39c12" opacity="0.6"/>
  <circle cx="350" cy="60" r="4" fill="#f39c12" opacity="0.7"/>
  <circle cx="60" cy="120" r="2" fill="#f39c12" opacity="0.5"/>
  
  <!-- Title -->
  <text x="200" y="280" text-anchor="middle" font-family="serif" font-size="18" font-weight="bold" fill="white">
    Мудрость в действии
  </text>
</svg>