<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="leaderBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50"/>
      <stop offset="50%" style="stop-color:#34495e"/>
      <stop offset="100%" style="stop-color:#e74c3c"/>
    </linearGradient>
    <radialGradient id="spotLight" cx="50%" cy="20%" r="60%">
      <stop offset="0%" style="stop-color:#f39c12;stop-opacity:0.9"/>
      <stop offset="100%" style="stop-color:#f39c12;stop-opacity:0"/>
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#leaderBg)"/>
  <rect width="400" height="300" fill="url(#spotLight)"/>
  
  <!-- Podium/Stage -->
  <g transform="translate(200,250)">
    <rect x="-80" y="-20" width="160" height="50" fill="#8b4513"/>
    <rect x="-75" y="-25" width="150" height="5" fill="#a0522d"/>
  </g>
  
  <!-- Central leader figure -->
  <g transform="translate(200,180)">
    <!-- Body -->
    <rect x="-15" y="20" width="30" height="50" rx="5" fill="#2c3e50"/>
    
    <!-- Head -->
    <circle cx="0" cy="0" r="25" fill="#f4d1a4"/>
    
    <!-- Crown/Leadership symbol -->
    <path d="M-20,-25 L-10,-35 L0,-25 L10,-35 L20,-25 L25,-20 L-25,-20 Z" 
          fill="#f39c12" stroke="#e67e22" stroke-width="1"/>
    <circle cx="-10" cy="-30" r="2" fill="#e74c3c"/>
    <circle cx="0" cy="-35" r="3" fill="#e74c3c"/>
    <circle cx="10" cy="-30" r="2" fill="#e74c3c"/>
    
    <!-- Arms raised in leadership gesture -->
    <rect x="-40" y="25" width="12" height="30" rx="6" fill="#f4d1a4" transform="rotate(-30)"/>
    <rect x="28" y="25" width="12" height="30" rx="6" fill="#f4d1a4" transform="rotate(30)"/>
    
    <!-- Cape flowing -->
    <path d="M-20,20 Q-60,40 -50,70 L-15,70 L-15,20 Z" fill="#e74c3c" opacity="0.9"/>
    <path d="M20,20 Q60,40 50,70 L15,70 L15,20 Z" fill="#e74c3c" opacity="0.9"/>
  </g>
  
  <!-- Followers/crowd silhouettes -->
  <g fill="rgba(255,255,255,0.3)">
    <!-- Left side followers -->
    <circle cx="80" cy="220" r="12"/>
    <rect x="74" y="232" width="12" height="25" rx="6"/>
    
    <circle cx="50" cy="230" r="10"/>
    <rect x="45" y="240" width="10" height="20" rx="5"/>
    
    <circle cx="110" cy="235" r="11"/>
    <rect x="104" y="246" width="11" height="22" rx="5"/>
    
    <!-- Right side followers -->
    <circle cx="320" cy="220" r="12"/>
    <rect x="314" y="232" width="12" height="25" rx="6"/>
    
    <circle cx="350" cy="230" r="10"/>
    <rect x="345" y="240" width="10" height="20" rx="5"/>
    
    <circle cx="290" cy="235" r="11"/>
    <rect x="285" y="246" width="11" height="22" rx="5"/>
  </g>
  
  <!-- Leadership arrows/energy -->
  <g stroke="#f39c12" stroke-width="3" fill="none" opacity="0.7">
    <path d="M200,150 L120,180 M200,150 L280,180"/>
    <path d="M200,150 L160,200 M200,150 L240,200"/>
    
    <!-- Arrow heads -->
    <path d="M115,175 L120,180 L125,175 M275,175 L280,180 L285,175"/>
    <path d="M155,195 L160,200 L165,195 M235,195 L240,200 L245,195"/>
  </g>
  
  <!-- Stars around leader -->
  <g fill="#f39c12" opacity="0.8">
    <path d="M160,120 L162,126 L168,126 L163,130 L165,136 L160,132 L155,136 L157,130 L152,126 L158,126 Z"/>
    <path d="M240,110 L242,116 L248,116 L243,120 L245,126 L240,122 L235,126 L237,120 L232,116 L238,116 Z"/>
    <path d="M180,100 L182,106 L188,106 L183,110 L185,116 L180,112 L175,116 L177,110 L172,106 L178,106 Z"/>
    <path d="M220,95 L222,101 L228,101 L223,105 L225,111 L220,107 L215,111 L217,105 L212,101 L218,101 Z"/>
  </g>
  
  <!-- Title -->
  <text x="200" y="290" text-anchor="middle" font-family="serif" font-size="16" font-weight="bold" fill="white">
    Естественное лидерство
  </text>
</svg>